{
	"name": "@sorens/artist-svelte",
	"version": "0.0.1-dev",
	"type": "module",
	"author": {
		"email": "soren.abedi@gmail.com",
		"name": "Soren Abedi",
		"url": "https://sorenabedi.ir"
	},
	"license": "GPL-3.0",
	"keywords": [
		"svelte",
		"sveltekit",
		"UI framework"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sorenabedi/artist-svelte"
	},
	"homepage": "",
	"bugs": {
		"url": "https://github.com/sorenabedi/artist-svelte/issues"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"files": [
		"**/*.d.ts",
		"**"
	],
	"scripts": {
		"svelte:dev": "svelte-kit dev --open --host",
		"svelte:build": "svelte-kit build",
		"svelte:pkg": "svelte-kit package",
		"svelte:preview": "svelte-kit preview",
		"test": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.cjs --passWithNoTests",
		"test:watch": "npm run test -- --watch",
		"test:coverage": "npm run test -- --watch --coverage",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --ignore-path .gitignore . --fix",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"storybook:dev": "start-storybook -s ./static -p 6006",
		"storybook:build": "build-storybook -s ./static",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,svelte}": [
			"pnpm run format",
			"pnpm run check",
			"pnpm run lint"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"clsx": "^1.1.1",
		"svelte": "^3.42.6"
	},
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.6",
		"@jest/globals": "^27.2.2",
		"@storybook/addon-a11y": "^6.3.8",
		"@storybook/addon-actions": "^6.3.8",
		"@storybook/addon-essentials": "^6.3.8",
		"@storybook/addon-links": "^6.3.8",
		"@storybook/addon-svelte-csf": "^1.1.0",
		"@storybook/preset-scss": "^1.0.3",
		"@storybook/svelte": "^6.3.8",
		"@sveltejs/kit": "next",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/svelte": "^3.0.3",
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		"css-loader": "^5.2.6",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"husky": "^7.0.2",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.2.1",
		"jest-css-modules-transform": "^4.3.0",
		"lint-staged": "^11.1.2",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"sass": "^1.42.0",
		"sass-loader": "10.1.1",
		"style-loader": "2.0.0",
		"svelte-check": "^2.2.6",
		"svelte-jester": "^2.1.4",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.9.4",
		"svelte2tsx": "^0.4.6",
		"ts-jest": "^27.0.5",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	}
}
